{
    "$schema": "./node_modules/@angular/service-worker/config/schema.json",
    "index": "/index.html",
    "assetGroups": [
        {
            "name": "app",
            "installMode": "prefetch",
            "resources": {
                "files": [
                    "/favicon.ico",
                    "/index.html",
                    "/manifest.webmanifest",
                    "/*.css",
                    "/*.js"
                ]
            }
        },
        {
            "name": "assets",
            "installMode": "lazy",
            "updateMode": "prefetch",
            "resources": {
                "files": [
                    "/assets/**",
                    "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
                ]
            }
        }
    ],
    "dataGroups": [
        {
            "name": "api-products",
            "urls": [
                "/api/products/**",
                "/api/categories/**"
            ],
            "cacheConfig": {
                "maxSize": 100,
                "maxAge": "6h",
                "strategy": "performance"
            }
        },
        {
            "name": "api-fresh-data",
            "urls": [
                "/api/user/**",
                "/api/cart/**",
                "/api/orders/**"
            ],
            "cacheConfig": {
                "maxSize": 50,
                "maxAge": "5m",
                "timeout": "5s",
                "strategy": "freshness"
            }
        }
    ]
}