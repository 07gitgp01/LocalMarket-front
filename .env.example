# API Configuration
API_URL=http://localhost:3000
API_TIMEOUT=30000

# Auth Configuration
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION=86400

# Application Configuration
APP_NAME=LocalMarket
APP_VERSION=1.0.0
APP_ENV=development

# Payment Gateways (Senegal)
ORANGE_MONEY_API_KEY=your-orange-money-api-key
ORANGE_MONEY_MERCHANT_ID=your-merchant-id
WAVE_API_KEY=your-wave-api-key
WAVE_MERCHANT_ID=your-merchant-id

# Google Maps (for location features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Firebase (Optional - for push notifications)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-app.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
EMAIL_FROM=noreply@localmarket.com

# Social Media Links
FACEBOOK_URL=https://facebook.com/localmarket
TWITTER_URL=https://twitter.com/localmarket
INSTAGRAM_URL=https://instagram.com/localmarket
WHATSAPP_NUMBER=+221770000000

# Feature Flags
ENABLE_PWA=true
ENABLE_I18N=true
ENABLE_ANALYTICS=false
ENABLE_CHAT_SUPPORT=true
